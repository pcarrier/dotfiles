[user]
	name = Pierre Carrier
	email = pierre@spotify.com
[sendemail]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
	smtpuser = pierre@spotify.com
[status]
	showUntrackedFiles = normal
[core]
	ignorecase = true
	excludesfile = ~/.gitignore_global
[push]
	default = tracking
[rerere]
	enabled = 1
	autoupdate = 1
[color]
	diff = auto
	interactive = auto
	branch = auto
	status = auto
[alias]
	k = log --oneline --graph --decorate
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	b = bundle
	d = diff
	ds = diff --staged
	cp = cherry-pick
	dsc = describe
	nr = name-rev --name-only --refs=refs/heads/*
	nri = name-rev --refs=refs/heads/* --stdin
	ss = status -sb
	pulla = pull --all
	pusha = push --all
	dw = diff --color-words
	wd = diff --word-diff
	co = checkout
	cl = clone
	cm = commit
	st = status
	where = log --pretty=format:'%ad %h %d' --abbrev-commit --date=short -1
	sr = svn rebase
	sd = svn dcommit
	st = !open -a SourceTree .
[difftool "sourcetree"]
	cmd = /Applications/Kaleidoscope.app/Contents/MacOS/ksdiff -w \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[github]
	user = pcarrier
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[branch]
	autosetuprebase = always
